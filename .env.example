#############################################
# FELORA V3 — Modèle d’environnement (.env) #
#############################################
# Copiez ce fichier en `.env` et remplissez avec vos valeurs.
# Ne commitez jamais `.env` (voir .gitignore).

# ========== CORE ==========
# URL publique de l’app (prod ou preview)
NEXT_PUBLIC_APP_URL=

# ========== BASE DE DONNÉES ==========
# Exemple: postgresql://user:pass@host:5432/felora
DATABASE_URL=

# ========== AUTH (NextAuth) ==========
# Générer avec: openssl rand -base64 32
NEXTAUTH_SECRET=
# URL de l’app pour les callbacks OAuth/emails
NEXTAUTH_URL=

# ========== FEATURE FLAGS (serveur) ==========
FEATURE_UPLOAD=false
FEATURE_CADEAU=false
FEATURE_AUTH_MIDDLEWARE=false

# ========== FEATURE FLAGS (client) ==========
NEXT_PUBLIC_ENABLE_TEST_PAGES=false
NEXT_PUBLIC_DEBUG_MODE=false
# Exemples d’UI flags (laisser à false par défaut)
NEXT_PUBLIC_FEATURE_UI_HOME=false
NEXT_PUBLIC_FEATURE_UI_PROFILE=false
NEXT_PUBLIC_FEATURE_UI_MESSAGES=false
NEXT_PUBLIC_FEATURE_UI_DASHBOARD_ESCORT_PROFIL=false
NEXT_PUBLIC_FEATURE_UI_DASHBOARD_ESCORT_MEDIAS=false
NEXT_PUBLIC_FEATURE_UI_DASHBOARD_ESCORT_STATISTIQUES=false
NEXT_PUBLIC_FEATURE_UI_DASHBOARD_ESCORT_PARAMETRES=false
NEXT_PUBLIC_FEATURE_UI_DASHBOARD_ESCORT_ACTIVITE=false
NEXT_PUBLIC_FEATURE_UI_DASHBOARD_CLUB_PROFILE=false
NEXT_PUBLIC_FEATURE_UI_ADMIN_COMMENTS=false

# ========== STOCKAGE ==========
# Provider: local | cloudflare-r2 | aws-s3
STORAGE_PROVIDER=local
# Cloudflare R2 (remplir si STORAGE_PROVIDER=cloudflare-r2)
CLOUDFLARE_R2_ENDPOINT=
CLOUDFLARE_R2_BUCKET=
CLOUDFLARE_R2_ACCESS_KEY=
CLOUDFLARE_R2_SECRET_KEY=
CLOUDFLARE_R2_ACCOUNT_ID=

# ========== EMAIL ==========
# SMTP recommandé pour vérification email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=Felora <no-reply@felora.ch>
# Option Resend (si utilisé)
RESEND_API_KEY=
RESEND_FROM=

# ========== CARTES & GÉO ==========
NEXT_PUBLIC_MAPBOX_TOKEN=
NEXT_PUBLIC_GOOGLE_PLACES_KEY=

# ========== OBSERVABILITÉ ==========
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_ENVIRONMENT=production

# ========== LIMITES ==========
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ========== BUSINESS ==========
WALLET_MAX_FUND_PER_DAY=2000
GIFT_MAX_PER_HOUR=20
ADMIN_FUND_ONLY=true

# ========== INTÉGRATIONS (optionnel) ==========
# Télégram
TELEGRAM_BOT_TOKEN=
TELEGRAM_BOT_USERNAME=
TELEGRAM_WEBHOOK_URL=
# Analytics/Umami
UMAMI_API_URL=
UMAMI_API_TOKEN=
UMAMI_WEBSITE_ID=

# ========== E2EE / CHAT (optionnel) ==========
NEXT_PUBLIC_E2EE_ENABLED=true
NEXT_PUBLIC_CHAT_FORCE_MOCK=false

# Notes:
# - Renseigner les secrets dans l’hébergeur (Vercel), pas dans le dépôt.
# - Garder les flags UI en false par défaut et activer en canary.
# - Pour Cloudflare R2, configurer le CORS du bucket (voir docs/UPLOAD_R2_ROLLOUT.md).
